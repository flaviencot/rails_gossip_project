<body data-turbo="false">
  <%= yield %> 

<% if @user.errors.any? %>
<div class="alert alert-danger" role="alert">
  <p>Nous n'avons pas réussi à créer le user pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <%= label_tag 'first_name' %>
    <%= text_field_tag 'first_name', @user.first_name %>
    <br /> <br />
    <%= label_tag 'last_name' %>
    <%= text_area_tag 'last_name', @user.last_name %>
    <br /> <br />
    <%= label_tag 'email' %>
    <%= text_area_tag 'email', @user.email %>
    <%= label_tag 'city_id' %>
    <%= text_area_tag 'city_id', @user.city_id.to_i %>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password', @user.password %>
    <%= label_tag 'password' %>
    <%= submit_tag "Create Post" %>
  <% end %>
</div>
</body>

